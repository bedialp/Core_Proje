@using EntityLayer.Concrete
@model List<Service>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Hizmet Listesi</h4>

			<div class="table-responsive">
				<table class="table align-items-center table-flush">
					<thead class="thead-light">
						<tr>
							<th scope="col" class="sort" data-sort="name">#</th>
							<th scope="col" class="sort" data-sort="budget">Başlık</th>
							<th scope="col">Sil</th>
							<th scope="col" class="sort" data-sort="completion">Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ServiceID</td>
								<td>@item.Title</td>
								<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
								<td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<a href="/Service/AddService/" class="btn btn-outline-info">Yeni Hizmet Ekle</a>
			</div>
		</div>
	</div>
</div>